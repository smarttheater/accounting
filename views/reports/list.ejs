<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.0/locale/ja.js"></script>
<script src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>

<div class="">
    <form id="" class="">
        <input id="input_limit" type="hidden" name="limit" value="20">

        <div class="row">
            <div class="form-group col-md-2">
                <label for="category" class="">
                    カテゴリー
                </label>
                <input type="text" class="form-control" name="category" id="category">
            </div>

            <div class="form-group col-md-2">
                <label for="confirmationNumber" class="">
                    確認番号
                </label>
                <input type="text" class="form-control" name="confirmationNumber" id="confirmationNumber">
            </div>

            <div class="form-group col-md-2">
                <label for="customer[group]" class="">
                    購入者グループ
                </label>
                <input type="text" class="form-control" name="customer[group]" id="customer[group]">
            </div>

            <div class="form-group col-md-2">
                <label for="reservation[reservationFor][id]" class="">
                    イベントID
                </label>
                <input type="text" class="form-control" name="reservation[reservationFor][id]"
                    id="reservation[reservationFor][id]">
            </div>

            <div class="form-group col-md-2">
                <label for="reservation[id]" class="">
                    予約ID
                </label>
                <input type="text" class="form-control" name="reservation[id]" id="reservation[id]">
            </div>

        </div>

        <div class="row">
            <div class="form-group col-md-2">
                <label for="dateFrom" class="">
                    売上期間選択
                </label>

                <div class="input-group">
                    <input type="text" class="form-control datepicker" name="dateFrom" id="dateFrom">
                    <div class="input-group-append">
                        <span class="input-group-text">から</span>
                    </div>
                    <input type="text" class="form-control datepicker" name="dateTo" id="dateTo">
                    <div class="input-group-append">
                        <span class="input-group-text">まで</span>
                    </div>
                </div>
            </div>

            <div class="form-group col-md-2">
                <label for="eventStartFrom" class="">
                    来塔予定日期間選択
                </label>

                <div class="input-group">
                    <input type="text" class="form-control datepicker" name="eventStartFrom" id="eventStartFrom">
                    <div class="input-group-append">
                        <span class="input-group-text">から</span>
                    </div>
                    <input type="text" class="form-control datepicker" name="eventStartThrough" id="eventStartThrough">
                    <div class="input-group-append">
                        <span class="input-group-text">まで</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <a id="btn_execsearch" class="btn btn-next" href="javascript:void(0)">
                <span>検索</span>
            </a>
            <a id="btn_clearconditions" class="btn btn-big" href="javascript:void(0)">
                <span>検索条件リセット</span>
            </a>
        </div>

    </form>
</div>


<div class="wrapper-reservations">
    <p id="echo_suspensiontotal" class="total-count"></p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>カテゴリー</th>
                <th>確認番号</th>
                <th>日時</th>
                <th>金額</th>
                <th>イベントID</th>
                <th>イベント日時</th>
                <th>オファー名称</th>
                <th>オファー単価</th>
                <th>座席コード</th>
            </tr>
        </thead>
        <tbody id="reservations">

        </tbody>
    </table>
</div>

<div class="wrapper-controls">
    <div class="navigation">
    </div>
</div>

<div class="modal fade loading" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center">
                    処理中
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" name="username" value="<%- req.staffUser.username %>">

<div class="modal-calender">
    <div class="modal-calender-content">
        <div id="calendercontainer"></div>
    </div>
</div>

