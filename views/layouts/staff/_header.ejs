<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.path;
}
%>
<header>
    <div class="container">

        <a href="javascript:void(0);" class="header-logo"><img src="/images/common/logo.svg" alt="TTTS"></a>

        <div class="menu-staff">
            <div class="menu-staff">
                <p class="myname"><%= req.staffUser.familyName %> <%= req.staffUser.givenName %></p>

                <% if (routeName !== '/mypage') { %>
                <a class="btn-mypage" href="/staff/mypage"><span>予約一覧</span></a>
                <% } %>

                <% if (routeName !== '/suspension/setting/performances') { %>
                <a class="btn-suspension-setting"
                    href="/staff/suspension/setting/performances"><span>オンライン<br>販売停止</span></a>
                <% } %>

                <a class="btn-logout" href="<%= req.staffUser.generateLegacyLogoutUrl('/staff/mypage') %>"><span>ログアウト</span></a>
            </div>

        </div>
    </div>
</header>